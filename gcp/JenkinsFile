pipeline{
    agent any
    environment{
        credentials="e532f9cb-47df-49b5-9bae-769de56c1481"
    }
    stages{
        stage{
            steps{
                withCredentials([file(credentialsId:env.credentials, variable: 'GC_KEY')]){
                    sh """
                        export GOOGLE_APPLICATION_CREDENTIALS=$GC_KEY
                        cd gcp
                        terraform init
                        terraform plan
                        terraform apply -auto-approve
                        """
                }
            }
        }
    }
}